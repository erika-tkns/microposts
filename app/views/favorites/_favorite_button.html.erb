<% if current_user.favoritepost?(other_micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: other_micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, other_micropost.id %>
    <%= f.submit 'NotGood', class: 'btn btn-danger btn-block' %>
    <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, other_micropost.id %>
    <%= f.submit 'Good', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>